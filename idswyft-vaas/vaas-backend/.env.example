# VaaS Backend Environment Variables

# Server Configuration
PORT=3002
VAAS_PORT=3002
NODE_ENV=production

# CORS Origins (comma-separated) - Production domains
VAAS_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://app.idswyft.app,https://customer.idswyft.app,https://enterprise.idswyft.app

# VaaS Database (Supabase)
VAAS_SUPABASE_URL=your_supabase_project_url
VAAS_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
VAAS_SUPABASE_ANON_KEY=your_anon_key

# Main Idswyft API Integration
IDSWYFT_API_URL=https://api.idswyft.app
IDSWYFT_SERVICE_TOKEN=your_service_token
IDSWYFT_API_TIMEOUT=30000

# Security
VAAS_JWT_SECRET=your_super_secret_jwt_key_here
VAAS_API_KEY_SECRET=your_api_key_encryption_secret
VAAS_SUPER_ADMIN_EMAILS=admin@idswyft.app

# Frontend URLs
VAAS_FRONTEND_URL=https://app.idswyft.app
VAAS_CUSTOMER_PORTAL_URL=https://customer.idswyft.app

# Rate Limiting
VAAS_RATE_LIMIT_WINDOW_MS=3600000
VAAS_RATE_LIMIT_MAX_REQUESTS_PER_ORG=1000
VAAS_RATE_LIMIT_MAX_REQUESTS_PER_USER=100

# Stripe (for billing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# File Storage
VAAS_STORAGE_PROVIDER=local
VAAS_MAX_FILE_SIZE=10485760
VAAS_ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,application/pdf

# Email Configuration
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@idswyft.app
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key

# Mailgun Configuration (for VaaS invitation emails)
MAILGUN_DOMAIN=mail.idswyft.app
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_FROM=Idswyft VaaS <noreply@mail.idswyft.app>

# Admin Notifications
ADMIN_NOTIFICATION_EMAIL=admin@idswyft.com

# Feature Flags
VAAS_WEBHOOKS_ENABLED=true
VAAS_BILLING_ENABLED=true
VAAS_ANALYTICS_ENABLED=true
VAAS_CUSTOM_DOMAINS_ENABLED=false

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# Webhooks
VAAS_WEBHOOK_BASE_URL=https://api-vaas.idswyft.app
IDSWYFT_WEBHOOK_SECRET=your_webhook_secret_from_main_api